<div class="container">
	{{> hud}}
	<div class="game-content">
		<a href="/game/hotel">&lt;&nbsp;Back to Hotel</a>
		<div class="row">
			<div class="col-sm-6 location-header">
				<h1>Marketplace</h1>
				<br>
				<p>Here's a listing of which items you can buy and sell and the prices for each</p>
				<div id="alert-container"></div>
			</div>
			<div class="col-sm-6">
				<img src="/assets/img/market.jpg" alt="Market Image" class="img-fluid" />
			</div>
		</div>
		<br>
		<div class="row">
			{{#each life.listings.market}}
			<div class="col-md-4 col-sm-6 col-xs-12">
				<div class="card text-xs-center transaction-listing" data-id="{{id}}">
					<div class="card-body card-block">
						<h4 class="card-title">{{name}}</h4>
						<p class="card-text">
							<small class="text-muted"><span class="transaction-listing-units">{{units}}</span> available @ ${{price}} per unit</small>
							{{#if_eq ../features.deal_indication true}}
								<br/><small class="text-muted">{{{get_deal_indication id price}}}</small>
							{{/if_eq}}
							{{#is_upgrade_enabled ../life.current "bookkeeping"}}
								<br/><small class="text-muted">According to your bookkeeper, you've currently spent $<span class="sunk-cost">{{get_item_sunk_cost id ../life.current.inventory}}</span> per unit in your inventory.</small>
							{{/is_upgrade_enabled}}
						</p>
						<p class="card-text">{{description}}</p>
					</div>
					<div class="card-footer card-button-footer">
						<button class="btn btn-success transaction-buy-btn"
							data-type="buy"
							data-id="{{id}}"
							data-name="{{name}}"
							data-units="{{units}}"
							data-price="{{price}}"
							data-toggle="modal"
							data-target="#transaction-modal">Buy</button>

						<button class="btn btn-danger transaction-sell-btn"
						data-type="sell"
						data-id="{{id}}"
						data-name="{{name}}"
						data-units="{{life_inventory id ../life.current.inventory}}"
						data-price="{{price}}"
						data-toggle="modal"
						data-target="#transaction-modal">Sell</button>
					</div>
					<div class="card-footer text-muted">
						{{#if ../life._id}}
							You have <strong class="transaction-inventory-units">{{life_inventory id ../life.current.inventory}}</strong> to sell
						{{else}}
							You can't sell anything here because you're a ghost
						{{/if}}
					</div>
				</div>
			</div>
			{{!-- sm --}}
			{{#if_cond (math (math @index '+' 1) '%' 2) '===' 0}}
			<div class="clearfix hidden-md-up hidden-xs-down"></div>
			{{/if_cond}}
			{{!-- xs --}}
			<div class="clearfix hidden-sm-up"></div>
			{{/each}}
		</div>
	</div>
</div><!-- /.container -->

<div class="modal fade" id="transaction-modal" data-cash="{{life.current.finance.cash}}" data-available-storage="{{life.current.storage.available}}">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h4 id="transaction-title" class="modal-title"></h4>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<fieldset class="form-group">
					<label id="transaction-units-label" for="transaction-units"></label>
					<p id="transaction-sunk-cost"></p>
					<input type="number" class="form-control" id="transaction-units" min="0" max="0" value="0" pattern="\d*">
				</fieldset>
				<p id="transaction-confirm-message"></p>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
				<button type="button" id="transaction-confirm-buy-btn" class="btn btn-success" data-life-id="{{life._id}}">Buy</button>
				<button type="button" id="transaction-confirm-sell-btn" class="btn btn-danger" data-life-id="{{life._id}}">Sell</button>
			</div>
		</div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
</div><!-- /.modal -->
